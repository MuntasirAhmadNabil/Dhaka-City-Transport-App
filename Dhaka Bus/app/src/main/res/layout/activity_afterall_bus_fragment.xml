<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:clipToPadding="false"
    tools:context="com.example.nabil.drawerlayout.AfterallBusFragmentActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:src="@drawable/home_bus"
            android:layout_margin="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:elevation="15dp"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:paddingLeft="30dp"
                android:paddingTop="15dp"
                android:id="@+id/busNametextview"
                android:text="BusName"
                android:textSize="20sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/busroutetextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="route"
                android:paddingLeft="30dp"
                android:paddingTop="5dp"
                />

        </LinearLayout>

    </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Full Route"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_margin="10dp"
            />

        <ListView
            android:id="@+id/busRouteLV"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edittextlayout"
            android:divider="#00000000"
            >
        </ListView>

</LinearLayout>


